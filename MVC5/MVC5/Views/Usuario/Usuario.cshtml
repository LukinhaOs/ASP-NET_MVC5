@model MVC5.Models.Usuario

@{
    ViewBag.Title = "Usuario";
}

<h2>Usuario</h2>

@using (Html.BeginForm())
{
<fieldset>
    <legend>Dados do usuário</legend>

    @Html.ValidationSummary(true)

    <div class="editar_label">
        @Html.LabelFor(model => model.Nome)
    </div>
    <div class="editor_campo">
        @Html.EditorFor(model => model.Nome)
        @Html.ValidationMessageFor(model => model.Nome)
    </div>

    <div class="editar_label">
        @Html.LabelFor(model => model.Info)
    </div>
    <div class="editor_campo">
        @Html.TextAreaFor(model => model.Info)
        @Html.ValidationMessageFor(model => model.Info)
    </div>


    <div class="editar_label">
        @Html.LabelFor(model => model.Login)
    </div>
    <div class="editor_campo">
        @Html.EditorFor(model => model.Login)
        @Html.ValidationMessageFor(model => model.Login)
    </div>

    <div class="editar_label">
        @Html.LabelFor(model => model.Email)
    </div>
    <div class="editor_campo">
        @Html.EditorFor(model => model.Email)
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <div class="editar_label">
        @Html.LabelFor(model => model.Senha)
    </div>
    <div class="editor_campo">
        @Html.PasswordFor(model => model.Senha)
        @Html.ValidationMessageFor(model => model.Senha)
    </div>


    <div class="editar_label">
        @Html.LabelFor(model => model.ConfirmaSenha)
    </div>
    <div class="editor_campo">
        @Html.PasswordFor(model => model.ConfirmaSenha)
        @Html.ValidationMessageFor(model => model.ConfirmaSenha)
    </div>

    <p><button>Cadastrar</button></p>

    <!-- Validação de páginas -->
    @section Scripts {(@Scripts.Render("~/bundles/jqueryval")} <!-- "section Scripts" (chama o Java Script) -->

</fieldset>
}